---
import { getCollection, render } from "astro:content";
import Layout from "../../layouts/BaseLayout.astro";
import MapViewer from "../../components/MapViewer.astro";
import SoundscapePlayer from "../../components/SoundscapePlayer.astro";
export async function getStaticPaths() {
  const notes = await getCollection("notes");
  return notes.map((note) => ({
    params: { slug: note.id },
    props: { note },
  }));
}

const { note } = Astro.props;
const { Content } = await render(note);
const pageTitle = note.data.title;
---

<Layout title={`${pageTitle} â€” Notes`}>
  <article class="note">
    <header>
      <h1>{pageTitle}</h1>
      <time datetime={note.data.date.toISOString()}>
        {
          note.data.date.toLocaleDateString("en-AU", {
            year: "numeric",
            month: "long",
            day: "numeric",
          })
        }
      </time>
    </header>

    {
      note.data.gpxUrl && (
        <section>
          <h2>Route</h2>
          <MapViewer gpxUrl={note.data.gpxUrl} />
        </section>
      )
    }

    <!-- Render the content with these custom components available inline within the note without imports -->
    <Content components={{ MapViewer, SoundscapePlayer }} />
  </article>
</Layout>

<style>
  .note {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 1rem 4rem;
  }
</style>
