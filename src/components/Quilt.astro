---
import MapViewer from "./MapViewer.astro";
import { CldImage } from "astro-cloudinary";
import PeelsPromo from "./PeelsPromo.astro";
import ReggiePromo from "./ReggiePromo.astro";
import EphemeraTile from "./EphemeraTile.astro";
import Trove from "./Trove.astro";
import SoundscapePlayer from "./SoundscapePlayer.astro";
import { getCollection } from "astro:content";
import R2Image from "./R2Image.astro";

const trove = await getCollection("trove");
const notes = await getCollection("notes");
const ephemera = await getCollection("ephemera");
const latestEphemera = ephemera
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime())
  .slice(0, 2);
---

<main>
  <section id="hero">
    <h1>Hello. Youâ€™ve reached the internet home of Danny White.</h1>
  </section>

  <PeelsPromo />

  <ReggiePromo />

  <section>
    <R2Image
      src="img/waratah-mosaic.jpg"
      width={200}
      height={200}
      alt="A mosaic that looks like a waratah"
    />
  </section>

  <section>
    <h2>Notes</h2>
    <ul>
      {
        notes.map((note) => (
          <li>
            <a href={`/notes/${note.id}`}>{note.data.title}</a>
          </li>
        ))
      }
    </ul>
  </section>

  <section>
    <SoundscapePlayer id="obi-obi-wompoo-fruit-dove" />
  </section>

  {
    latestEphemera.map((item) => (
      <section>
        <EphemeraTile itemId={item.id} showCaption={true} />
      </section>
    ))
  }

  <section>
    <CldImage
      src="images/artists-cascades"
      width={400}
      height={280}
      alt="A flowing waterfall at Artists Cascades"
    />
  </section>

  <section>
    <Trove />
  </section>

  <section>
    <h2>Trove manual array</h2>
    <ul>
      {
        trove.map((entry: any) => (
          <li>
            <p>{entry.data.title}</p>
            <p>{entry.data.description}</p>
            <a href={entry.data.url}>{entry.data.url}</a>
            <p>{entry.data.tags}</p>
          </li>
        ))
      }
    </ul>
  </section>

  <section>
    <EphemeraTile itemId="mazzolas-bakery" showCaption={true} />
  </section>

  <section>
    <MapViewer
      gpxUrl="/tracks/baroon-pocket-dam-to-kondalilla-falls.gpx"
      showElevationProfile={false}
    />
  </section>
</main>

<style>
  main {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    /* grid-template-rows: 1fr 1fr; */
    gap: 2rem;
    grid-template-rows: masonry;
  }

  #hero {
    display: flex;
    align-items: start;
    flex-direction: column;
    justify-content: center;
    padding: 16px;
  }

  h1 {
    font-size: 22px;
    margin-top: 0.25em;
  }

  #links {
    display: flex;
    gap: 16px;
  }

  #links a {
    display: flex;
    align-items: center;
    padding: 10px 12px;
    color: #111827;
    text-decoration: none;
    transition: color 0.2s;
  }

  #links a:hover {
    color: rgb(78, 80, 86);
  }

  #links a svg {
    height: 1em;
    margin-left: 8px;
  }

  #links a.button {
    color: white;
    background: linear-gradient(83.21deg, #3245ff 0%, #bc52ee 100%);
    box-shadow:
      inset 0 0 0 1px rgba(255, 255, 255, 0.12),
      inset 0 -2px 0 rgba(0, 0, 0, 0.24);
    border-radius: 10px;
  }

  #links a.button:hover {
    color: rgb(230, 230, 230);
    box-shadow: none;
  }

  pre {
    font-family:
      ui-monospace, "Cascadia Code", "Source Code Pro", Menlo, Consolas,
      "DejaVu Sans Mono", monospace;
    font-weight: normal;
    background: linear-gradient(14deg, #d83333 0%, #f041ff 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin: 0;
  }

  h2 {
    margin: 0 0 1em;
    font-weight: normal;
    color: #111827;
    font-size: 20px;
  }

  p {
    color: #4b5563;
    font-size: 16px;
    line-height: 24px;
    letter-spacing: -0.006em;
    margin: 0;
  }

  code {
    display: inline-block;
    background:
      linear-gradient(66.77deg, #f3cddd 0%, #f5cee7 100%) padding-box,
      linear-gradient(155deg, #d83333 0%, #f041ff 18%, #f5cee7 45%) border-box;
    border-radius: 8px;
    border: 1px solid transparent;
    padding: 6px 8px;
  }

  .box {
    padding: 16px;
    background: rgba(255, 255, 255, 1);
    border-radius: 16px;
    border: 1px solid white;
  }

  #news {
    position: absolute;
    bottom: 16px;
    right: 16px;
    max-width: 300px;
    text-decoration: none;
    transition: background 0.2s;
    backdrop-filter: blur(50px);
  }

  #news:hover {
    background: rgba(255, 255, 255, 0.55);
  }

  @media screen and (max-height: 368px) {
    #news {
      display: none;
    }
  }

  @media screen and (max-width: 768px) {
    #hero {
      display: block;
      padding-top: 10%;
    }

    #links {
      flex-wrap: wrap;
    }

    #links a.button {
      padding: 14px 18px;
    }

    #news {
      right: 16px;
      left: 16px;
      bottom: 2.5rem;
      max-width: 100%;
    }

    h1 {
      line-height: 1.5;
    }
  }
</style>
